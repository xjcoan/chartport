<% if @doctorlists.any? %>
<div class="container">
  <div class="jumbotron">
    <h1>All Hospital Registrations</h1>
  </div>

  <% @doctorlists.each do |doctorlist| %>
  <div class="row">
    <div class="col-sm-6">
      <p>
        Hospital: <%= link_to Hospital.find(doctorlist.hospital_id).name, hospital_path(Hospital.find(doctorlist.hospital_id)) %>
      </p>
    </div>
    <div class="col-sm-6">
      <p>
        Doctor: <%= link_to User.find(doctorlist.user_id).name, user_path(User.find(doctorlist.user_id)) %>
      </p>
    </div>
  </div>
  <small><%= link_to "Delete", doctorlist_path(doctorlist), method: :delete,
  data: { confirm: "Are you sure you want to delete this relation?"} %></small>
  <hr />
  <p>

  </p>
  <% end %>
  <%= will_paginate @doctorlists %>
</div>
<% else %>
<div class="container">
  <div class="page-header">
    <h1>No Registrations.</h1>
  </div>
  <p>
    There are no registrations in the system.
    <br />
    Return to your <%= link_to "Dashboard", dashboard_path %>.
  </p>
</div>
<% end %>
