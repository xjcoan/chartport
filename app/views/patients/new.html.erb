<div class="container">
  <div class="jumbotron">
    <h1>New Patient Entry Form</h1>
  </div>
  <%= form_for @patient, url: user_patients_path(current_user) do |f| %>


  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@patient.errors.count, "error") %>
      </h2>
        <% @patient.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
    </div>
  <% end %>

  <div class="page-header">
    <h3><%= f.label "Patient Name" %></h3>
  </div>
  <p>
    <%= f.text_field :name, :class => 'textfield' %>
  </p>

  <div class="page-header">
    <h3><%= f.label "Date of Birth" %></h3>
  </div>
  <p>
    <%= f.date_field :date_of_birth, :class => 'textfield', value: Time.now.strftime("%m/%d/%Y") %>
  </p>

  <div class="page-header">
    <h3><%= f.label "Phone Number" %></h3>
  </div>
  <p>
    <%= f.telephone_field :phone_number, :class => 'textfield', value: number_to_phone('2221112222', area_code: true) %>
  </p>

  <%= f.text_area :primary_care_physician, value: @user.id, style: "display: none;"  %>
  <%= f.submit "Submit Patient" %>

  <% end %>

</div>
