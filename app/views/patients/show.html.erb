<div class="jumbotron">
  <h1><%= @patient.name %></h1>
  <button class="btn btn-default"><%= link_to "Edit Patient Info", edit_patient_path(@patient) %> <span class="glyphicon glyphicon-edit"</button>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6">
      <div class="page-header">
        <h4>Patient DOB:</h4>
      </div>
      <p><%= @patient.date_of_birth %></p>
    </div>
    <div class="col-sm-6">
      <div class="page-header">
        <h4>Patient Phone Number:</h4>
      </div>
      <p><%= @patient.phone_number %></p>
    </div>
  </div>
</div>

<div class="container-fluid">
  <h4>Medical History:</h4>
  <p>
    <%= @patient.medical_history %>
  </p>
</div>

<br />
<hr />
<br />

<div class="container-fluid">
  <h4>Medications:</h4>
  <p>
    <%= @patient.medication %>
  </p>
</div>
