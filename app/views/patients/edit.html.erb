<%= form_for :patient, url: patient_path(@patient), method: :patch do |f| %>

<div class="container">
  <div class="jumbotron">
    <h1>Edit Patient Record</h1>
    <hr />
    <h3>
      <%= @patient.name %>
    </h3>
  </div>
</div>

<div class="container">
  <div class="page-header">
    <h3>Patient Phone Number:</h3>
  </div>
  <%= f.telephone_field :phone_number, :class => 'textfield', value: number_to_phone(@patient.phone_number, area_code: true) %>
</div>
<br />

<%= button_tag(type: 'submit', class: "btn btn-default") do %>
 Update Record <span class="glyphicon glyphicon-floppy-disk"></span>
<% end %>


<% end %>
